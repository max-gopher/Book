{
    "restartable" : "rs",
    "ignore" : [
        ".git",
        "node_modules/**/nodemodules"
    ],
    "verbose" : true,
    "execMap" : {
        "js" : "node --harmony"
    },
    "events" : {
        "restart" : "osascript -e 'display notification \"App restarted\"'"
    },
    "env" : {
        "NODE_ENV" : "development"
    },
    "ext" : "js json"
}